# .env
# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
SKIP_ENV_VALIDATION=false

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
# Generate these secrets using: openssl rand -base64 32
NEXTAUTH_SECRET=your_generated_secret_here
# For CSRF protection in NextAuth - generate using: openssl rand -base64 32
AUTH_SECRET=your_generated_auth_secret_here

# -----------------------------------------------------------------------------
# OAuth Providers
# -----------------------------------------------------------------------------
# Google (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret

# Github (https://github.com/settings/developers)
GITHUB_CLIENT_ID=your_client_id
GITHUB_CLIENT_SECRET=your_client_secret

# Discord (https://discord.com/developers/applications)
DISCORD_CLIENT_ID=your_client_id
DISCORD_CLIENT_SECRET=your_client_secret

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=your_database_url

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL=your_redis_url
UPSTASH_REDIS_REST_TOKEN=your_redis_token
ENABLE_RATE_LIMITING=false
RATE_LIMITING_REQUESTS_PER_SECOND=20

# -----------------------------------------------------------------------------
# File Upload
# -----------------------------------------------------------------------------
UPLOADTHING_SECRET=your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id

# -----------------------------------------------------------------------------
# Version Control & Deployment
# -----------------------------------------------------------------------------
NEXT_PUBLIC_VERCEL_PROJECT_ID=your_vercel_project_id
NEXT_PUBLIC_VERCEL_TOKEN=your_vercel_token
NEXT_PUBLIC_GITHUB_TOKEN=your_github_token
NEXT_PUBLIC_GITHUB_USERNAME=your_github_username
NEXT_PUBLIC_GITHUB_REPOSITORY=your_repository_url

# -----------------------------------------------------------------------------
# Misc Configuration
# -----------------------------------------------------------------------------
ADMIN_EMAIL=your_admin_email
# Controls visibility of bottom-right development indicator showing session/auth status
NEXT_PUBLIC_DEV_INDICATOR=true

# .env.example
# Instructions for obtaining credentials:

# NextAuth Secrets:
# Generate both secrets using: openssl rand -base64 32
NEXTAUTH_SECRET=
AUTH_SECRET=

# OAuth Providers:
# 1. Google: https://console.cloud.google.com/apis/credentials
#    - Create new project
#    - Configure OAuth consent screen
#    - Create OAuth 2.0 Client ID
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# 2. GitHub: https://github.com/settings/developers
#    - Go to Settings > Developer settings > OAuth Apps
#    - Create new OAuth application
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# 3. Discord: https://discord.com/developers/applications
#    - Create new application
#    - Go to OAuth2 settings
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Database:
# Setup on Neon: https://neon.tech
# Create new project and use connection string
DATABASE_URL=

# Redis:
# Setup on Upstash: https://upstash.com
# Create new database and use REST URL and token
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Uploadthing:
# Setup at: https://uploadthing.com
# Create new project and get credentials
UPLOADTHING_SECRET=
UPLOADTHING_APP_ID=

# Vercel:
# Get from: https://vercel.com/dashboard
# Project settings > General > Project ID
NEXT_PUBLIC_VERCEL_PROJECT_ID=
NEXT_PUBLIC_VERCEL_TOKEN=

# GitHub:
# Create token at: https://github.com/settings/tokens
# Needs repo and user permissions
NEXT_PUBLIC_GITHUB_TOKEN=
NEXT_PUBLIC_GITHUB_USERNAME=
NEXT_PUBLIC_GITHUB_REPOSITORY=

# Admin Configuration
ADMIN_EMAIL=
# Controls visibility of bottom-right development indicator showing session/auth status
NEXT_PUBLIC_DEV_INDICATOR=true