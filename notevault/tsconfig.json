{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"db": ["./src/core/server/db/index.ts"],
			"types": ["./src/core/types/index.ts"],
			"ui": ["./src/components/ui/index.ts"],
			"styles": ["./src/styles/app.scss"],
			"hooks": ["./src/core/hooks/index.ts"],
			"cn": ["./src/core/utilities/cn.ts"],
			"models": ["./src/core/models/index.ts"],
			"stores": ["./src/core/stores/index.ts"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"types": ["framer-motion/types"]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
