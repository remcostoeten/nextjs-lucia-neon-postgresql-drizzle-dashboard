{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"models": ["./src/core/models/index.ts"],
			"toast": ["./src/core/stores/store.toasts.ts"],
			"cn": [
				"src/core/constants/cn-tw.ts"
			],
			"locales": ["./src/core/config/locales/locales.ts"],
			"db": ["./src/core/server/database/index.ts"],
			"hooks": ["./src/core/hooks/index.ts"],
			"schema": ["./src/core/server/schema/index.ts"],
			"actions": ["./src/core/server/actions/index.ts"],
			"ui": ["./src/components/ui/index.ts"],
			"stores": ["./src/core/stores/index.ts"],
			"atoms": ["./src/components/atoms/index.ts"]
		},
		"target": "esnext",
		"baseUrl": "./"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
